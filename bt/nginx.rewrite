if ($uri ~* "^(.*)\.php$") {
    rewrite ^(.*) /cleanphp/bootstrap.php last;
}

location @cleanphp {
    rewrite ^ /cleanphp/bootstrap.php last;
}

location ~* ^\/clean_static\/(.*)$ {
    if_modified_since before;
    try_files /app/public/$1 @cleanphp;
}

location / {
    try_files /app/storage/public/$uri @cleanphp;
}



